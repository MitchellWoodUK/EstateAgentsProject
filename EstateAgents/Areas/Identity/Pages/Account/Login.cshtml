@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="container">
    <div class="box p-3 rounded m-5">
        <h1 class="text-light ms-3 title">@ViewData["Title"]</h1>

        <form id="account" method="post" class="mb-3">
            <h2 class="text-light ms-3 fw-light">Use a local account to log in.</h2>
            <p class="text-light ms-3 fs-5 fw-light">Fill in the below details to access your account and use Mitchell Moves!</p>
            <hr />
            <div class="d-flex flex-column align-items-center">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 mx-3 w-75">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mx-3 w-75">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3 mx-3 w-75">
                    <label asp-for="Input.RememberMe" class="form-label d-flex ">
                        <input class="form-check-input text-light me-2" asp-for="Input.RememberMe" />
                        <p class="text-light">@Html.DisplayNameFor(m => m.Input.RememberMe)</p>
                    </label>
                </div>


                <button id="login-submit" type="submit" class="w-75 btn btn-lg ">Log in</button>


                <div class="d-flex justify-content-around">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="links mx-3">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="links mx-3">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="links mx-3">Resend email confirmation</a>
                    </p>
                </div>

            </div>
        </form>
    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
