@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container">
    <div class="box p-3 rounded m-5">
        <h1 class="text-light ms-3 title">@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mb-3">
            <h2 class="text-light ms-3 fw-light">Create a new account.</h2>
            <p class="text-light ms-3 fs-5 fw-light">Fill in the below details to create a new account and access Mitchell Moves!</p>
            <hr />
            <div class="d-flex flex-column align-items-center">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 mx-3 w-75">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mx-3 w-75">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mx-3 w-75">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mx-3 w-75">
                    <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="Fullname" />
                    <label asp-for="Input.Name">Name</label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mx-3 w-75">
                    <input type="tel" asp-for="Input.Telephone" class="form-control" autocomplete="telephone" aria-required="true" placeholder="Telephone Number" />
                    <label asp-for="Input.Telephone">Telephone Number</label>
                    <span asp-validation-for="Input.Telephone" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mx-3 w-75">
                    <input type="number" asp-for="Input.Income" class="form-control" autocomplete="income" aria-required="true" placeholder="Income" />
                    <label asp-for="Input.Income">Income</label>
                    <span asp-validation-for="Input.Income" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 mx-3 w-75">
                    <input type="text" asp-for="Input.Address" class="form-control" autocomplete="address" aria-required="true" placeholder="Address" />
                    <label asp-for="Input.Address">Address</label>
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>


                <button id="registerSubmit" type="submit" class="w-75 btn btn-lg ">Register</button>
            </div>
      
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
